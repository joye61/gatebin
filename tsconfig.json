{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["ESNext", "DOM", "DOM.Iterable" ],
    "module": "ES2015",
    "rootDir": "./client",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true
  },
  "include": ["client/**/*"],
  "exclude": ["client/**/*.test.ts"]
}
